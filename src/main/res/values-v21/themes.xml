<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
    </style>
  <style name="FabPlayStyle">
        <item name="android:layout_width">@dimen/height_toolbar</item>
        <item name="android:layout_height">@dimen/height_toolbar</item>

        <item name="android:background">@drawable/fab_background</item>
        <item name="android:src">@drawable/ic_play</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab_elevation</item>
    </style>

    <style name="FabSaveStyle">
        <item name="android:layout_width">@dimen/height_toolbar</item>
        <item name="android:layout_height">@dimen/height_toolbar</item>

        <item name="android:background">@drawable/fab_background</item>
        <item name="android:src">@drawable/ic_save</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab_elevation</item>
    </style>
</resources>
